{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cpp compile and run",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "g++ ${file} -std=c++17 -O2 -o ${fileBasenameNoExtension} && ./${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
